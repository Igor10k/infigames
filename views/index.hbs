<!DOCTYPE html>
<html>
<head>
	<title>Infigames</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
	<link rel="apple-touch-icon" href="/img/apple-touch-icon-120x120-precomposed.png" sizes="120x120">
	<link rel="apple-touch-icon" href="/img/apple-touch-icon-60x60-precomposed.png">
	<link rel="apple-touch-startup-image" href="/img/apple-touch-startup-image-640x1096.png"
		media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)">
	<link rel="apple-touch-startup-image" href="/img/apple-touch-startup-image-640x920.png"
		media="(device-width: 320px) and (device-height: 480px) and (-webkit-device-pixel-ratio: 2)">
	<link rel="apple-touch-startup-image" href="/img/apple-touch-startup-image-320x460.png"
		media="(device-width: 320px) and (device-height: 480px) and (-webkit-device-pixel-ratio: 1)">
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>
	<div id="loader"><i></i><i></i><i></i></div>

	<div class="not_standalone mobile">
		<div class="logo"></div>
		<p>Add this page to your Home Screen</p>
		<i class="icon-arrow-down2"></i>
	</div>

	<div class="not_standalone desktop">
		<div class="logo"></div>
		<p>Open this page<br> in iPhone's Safari<br> to install the app</p>
		<p>or try it <a href="/?notwebapp=true">right here</a></p>
	</div>

	<script>
		{{#if isWebApp}}
		if (window.navigator.standalone) {
		{{/if}}
			var scripts = '';
			{{#unless isProduction}}
			scripts += '\x3Cscript src="/js/vendor/fastclick.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/jquery.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/handlebars.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/ember.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/ember-data.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/ember-animate.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/jquery.ikSlider.js">\x3C/script>';
			{{else}}
			scripts += '\x3Cscript src="//cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.0/fastclick.min.js">\x3C/script>';
			scripts += '\x3Cscript src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js">\x3C/script>';
			scripts += '\x3Cscript src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js">\x3C/script>';
			scripts += '\x3Cscript src="//cdnjs.cloudflare.com/ajax/libs/ember.js/1.5.1/ember.min.js">\x3C/script>';
			scripts += '\x3Cscript src="//cdnjs.cloudflare.com/ajax/libs/ember-data.js/1.0.0-beta.7/ember-data.min.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/ember-animate.min.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/vendor/jquery.ikSlider.min.js">\x3C/script>';
			{{/unless}}
			scripts += '\x3Cscript src="/js/templates.js">\x3C/script>';
			scripts += '\x3Cscript src="/js/app.js">\x3C/script>';

			document.write(scripts);
		{{#if isWebApp}}
		} else {
			var loader = document.getElementById('loader');
			loader.parentElement.removeChild(loader);

			var el;
			if (navigator.userAgent.indexOf('iPhone') !== -1) {
				el = document.querySelector('.not_standalone.mobile');
			} else {
				el = document.querySelector('.not_standalone.desktop');
			}
			el.className = el.className + ' shown';
		}
		{{/if}}
	</script>
</body>
</html>
