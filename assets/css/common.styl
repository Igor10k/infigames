/* EXTENDABLES
---------------------------------------- */
.pull-left
	float left

.pull-right
	float right

.list-clean
	margin 0; padding 0
	list-style none

.list-default
	@extend .list-clean
	margin 20px 0
	border solid #DDD
	border-width 1px 0

	li
		border-top 1px solid #DDD
		font-size 17px

		&:first-of-type
			border-top none

	a
	button
		display block
		position relative
		box-sizing border-box
		size 100% 18px
		padding 13px 28px 13px 12px
		border none
		background none
		line-height 18px
		text-align left
		text-decoration none
		color #333

		&:hover
			background #f6f6f6

		.icon-arrow-right3
			absolute right 5px top 50%
			margin-top -10px
			color #888

/* HELPERS
---------------------------------------- */
.table
	display table
	width 100%

.table-cell
	display table-cell
	vertical-align top

.hidden
	display none

[class*="icon-"]
	font-size 20px

.placeholder
	padding 40px 30px
	font-weight 300; font-size 18px; line-height 28px
	text-align center

	p
		margin 0

	.btn-wrap
		position relative
		display inline-block
		width 22px

		&:before
			content "\00a0"

		.btn-text
			position absolute

/* BUTTONS & LINKS
---------------------------------------- */
a
	color BLUE

	&:hover
	&:focus
		color darken(BLUE, 20%)

.btn-text
	height 44px
	padding 0 8px
	border none
	background none
	font-size 17px; line-height 1
	text-decoration none
	color BLUE

	a&
		line-height 44px

	&:hover
	&:focus
		color darken(BLUE, 20%)

.btn-ico
	@extend .btn-text
	width 44px
	padding 0
	font-size 20px
	text-align center

	a&
		line-height 48px

.btn-red
	color RED

	&:hover
	&:focus
		color darken(RED, 20%)

